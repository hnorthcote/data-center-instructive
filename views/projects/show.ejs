<%- include('../partials/header') %>
<% let swCost, hwCost; %>
<section>
<h3>Base Recommended Software</h3>
<table>
    <thead>
      <tr>
        <th>Software name</th>
        <th>Cost</th>
      </tr>
    </thead>
    <tbody>
      <% project.software.forEach(function(software) { %>
        <% swCost += software.cost ; return swCost;%>
        <tr>
          <td><%= software.name%></td>
          <td><%= software.cost %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</section>
