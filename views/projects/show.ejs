            <th>Hardware name</th>
            <th>Hardware type</th>
            <th>Cost</th>
          </tr>
        </thead>
        <tbody>
          <% project.hardware.forEach(function(hardware) { %>
            <% hwCost += hardware.cost ; return hwCost;%>
            <tr>
              <td><%= hardware.name%></td>
              <td><%= hardware.type%></td>
              <td><%= hardware.cost %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </section>
    <section>
        <h3>Base Total Cost</h3>
        <%= swCost + hwCost %>
