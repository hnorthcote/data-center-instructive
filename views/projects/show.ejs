            <div>Software Total Cost: </div>
            <div class="flow-text"> $<%= project.environment.softwareCost %></div>
            <div>Hardware Total Cost: </div>
            <div class="flow-text">$<%= project.environment.hardwareCost %></div>
            <div>Project Total Cost: </div>
            <div class="flow-text">$<%= project.environment.softwareCost + project.environment.hardwareCost %></div>
          </div></div></div></div>

        </section>

 <div class = 'row'> <div class="col s25 l10">
<section class="section container" >       
    <h2>Project Comments</h2>

<form  action="/projects/<%= project.id %>/comments" method="POST">
  <label>Comment:</label>
  <textarea name="content"></textarea>
  <input type="submit" value="Add Comment">
</form>
<% if (project.comments.length) { %>
  <!-- this is where we print a table of reviews -->
  <section>
  
      <% project.comments.forEach(function(comment) { %>
          <h6>Comment:</h6>
          <label>Date</label>
          <div><%= comment.creation.toLocaleDateString() %></div>
          <label>Comment</label>
          <div><%= comment.content %></div>      
          <form action="/projects/<%=comment._id%>/comments?_method=DELETE" method="POST">
            <button type="submit" class="btn white-text">Remove comment</button>
          </form>
  </section>
      <% }); %>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>
