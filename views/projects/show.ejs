<%- include('../partials/header') %>

<a  class="btn-small waves-light blue white-text hoverable"  href="/projects/<%= project.id %>/update">Edit Project</a>

<section>
<h3>Base Recommended Software</h3>
<table>
    <thead>
      <tr>
        <th>Software</th>
      </tr>
    </thead>
    <tbody>
      <% project.environment.software.forEach(function(software) { %>
        <tr>
          <td><%= software %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</section>
<section>
    <h3>Base Recommended Hardware</h3>
    <table>
        <thead>
          <tr>
            <th>Hardware</th>
          </tr>
        </thead>
        <tbody>
          <% project.environment.hardware.forEach(function(hardware) { %>
            <tr>
              <td><%= hardware%></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </section>
    <section>
        <h3>Base Estimated Total Cost</h3>
            <div>Software Total Cost: </div>
            <div><%= project.environment.softwareCost %></div>
            <div>Hardware Total Cost: </div>
            <div><%= project.environment.hardwareCost %></div>
            <div>Project Total Cost: </div>
            <div><%= project.environment.softwareCost + project.environment.hardwareCost %></div>
    </section>

    <h3>Project Comments</h3>
<form  action="/projects/<%= project.id %>/comments" method="POST">
  <label>Comment:</label>
  <textarea name="content"></textarea>
  <input type="submit" value="Add Comment">
</form>
<% if (project.comments.length) { %>
  <!-- this is where we print a table of reviews -->
  <section>
  
      <% project.comments.forEach(function(comment) { %>
          <h6>Comment:</h6>
          <label>Date</label>
          <div><%= comment.creation.toLocaleDateString() %></div>
          <label>Comment</label>
          <div><%= comment.content %></div>      
          <form action="/projects/<%=comment._id%>/comments?_method=DELETE" method="POST">
            <button type="submit" class="btn white-text">Remove comment</button>
          </form>
  </section>
      <% }); %>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>

